// pages/plans.tsx
import Link from 'next/link';

function Plans() {
  const plans = [
    { name: "Free", price: "$0", features: ["1 Sport", "1 Issue/Week"] },
    { name: "Starter", price: "$5/mo", features: ["3 Sports", "EOD Newsletters"] },
    { name: "All-Star", price: "$10/mo", features: ["All Sports", "Early Access"] },
    { name: "MVP", price: "$20/mo", features: ["All + Archives", "Bonus Content"] }
  ];

  return (
    <div className="p-8 bg-white min-h-screen">
      <h2 className="text-3xl font-bold mb-6 text-center text-black">Choose Your Plan</h2>
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
        {plans.map(plan => (
          <div key={plan.name} className="border p-4 rounded-xl bg-gray-100">
            <h3 className="text-2xl font-semibold">{plan.name}</h3>
            <p className="text-lg">{plan.price}</p>
            <ul className="mt-2 list-disc ml-5">
              {plan.features.map(f => <li key={f}>{f}</li>)}
            </ul>
            <Link href="/checkout" className="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded">Subscribe</Link>
          </div>
        ))}
      </div>
    </div>
  );
}

export default Plans;

